      "MaxLength": "64", 
      "MinLength": "1", 
      "Type": "String"
    }, 
    "NATInstanceType": {
      "AllowedValues": [
        "t1.micro", 
        "m1.small", 
        "m1.medium", 
        "m1.large", 
        "m1.xlarge", 
        "m2.xlarge", 
        "m2.2xlarge", 
        "m2.4xlarge", 
        "c1.medium", 
        "c1.xlarge", 
        "cc1.4xlarge", 
        "cc2.8xlarge", 
        "cg1.4xlarge"
